<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150jdp"
        android:layout_marginBottom="@dimen/_5jdp"
        android:layout_marginLeft="@dimen/_8jdp"
        android:layout_marginRight="@dimen/_8jdp"
        android:layout_marginTop="@dimen/_5jdp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgvw_recylrvw_item_albums_images_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/imgcd_image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_home_slider_default" />

            <TextView
                android:id="@+id/tv_recylrvw_item_albums_images_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/blackTrsprnt80"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/_8jdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14jdp"
                tools:text="@string/app_name" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>