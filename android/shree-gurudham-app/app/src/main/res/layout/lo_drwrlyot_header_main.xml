<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170jdp"
    android:background="@drawable/drwbl_background_header"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackTrsprnt80"
        android:orientation="vertical"
        android:visibility="gone" />

    <!--Logo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_80jdp"
            android:layout_height="@dimen/_80jdp"
            android:layout_marginTop="@dimen/_5jdp"
            android:contentDescription="@string/imgcd_image"
            android:src="@drawable/img_logo_highres" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_light"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14jdp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>